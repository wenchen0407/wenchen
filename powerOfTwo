public class Solution {
    public boolean isPowerOfTwo(int n) {
        
        //Wenchen's solution
        
        /*if(n<=0) return false;
        
        if(n<1) n=1/n;
        
        while(n>1){
            if(n%2 == 1) return false;
            else n=n/2;
        }
        
        if(n==1) return true;
        else return false;*/
        
        // bit operation
        if(n<=0) return false;
        
        return (n & (n-1))==0;
        
        
        
    }
    
    
}
